    <android.support.v7.widget.AppCompatEditText
        android:textColor="#ff7f7f7f"
        android:id="@id/et_phone"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:hint="输入手机号"
        android:drawableLeft="@mipmap/ic_man"
        android:drawablePadding="16.0dip"
        app:backgroundTint="#ffc1c1c1" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:textColor="#ff7f7f7f"
            android:id="@+id/et_authcode"
            android:background="@null"
            android:paddingLeft="16.0dip"
            android:paddingTop="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:hint="输入验证码"
            android:drawableLeft="@mipmap/ic_yanzhengma"
            android:drawablePadding="16.0dip" />

        <Button
            android:textSize="14.0sp"
            android:textColor="@color/colorPrimary"
            android:id="@id/bt_auth"
            android:background="@drawable/label_selector"
            android:layout_width="60.0dip"
            android:layout_height="32.0dip"
            android:layout_marginRight="30.0dip"
            android:text="获取"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <View
            android:background="#ffc1c1c1"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:layout_below="@id/et_authcode" />
    </RelativeLayout>

    <com.tino.views.EText
        android:textColor="#ff7f7f7f"
        android:id="@id/et_passwd"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:hint="设置密码"
        android:maxLength="12"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
        android:drawableLeft="@mipmap/ic_pwd"
        android:drawableRight="@mipmap/ic_pwd_unshow"
        android:drawablePadding="16.0dip"
        app:backgroundTint="#ffc1c1c1" />

    <Button
        android:textSize="18.0sp"
        android:textColor="#ffffffff"
        android:id="@id/bt_register"
        android:background="@drawable/bt_green_selector"
        android:layout_width="fill_parent"
        android:layout_height="46.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginTop="40.0dip"
        android:layout_marginRight="30.0dip"
        android:text="注册" />
</LinearLayout>