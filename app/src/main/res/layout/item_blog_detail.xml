<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:paddingLeft="12.0dip"
    android:paddingTop="24.0dip"
    android:paddingRight="12.0dip"
    android:background="#ffffffff"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.tino.views.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="46.0dip"
        android:layout_height="46.0dip"
        android:src="@drawable/avatar_default" />

    <TextView
        android:textSize="@dimen/text_small"
        android:textColor="@color/black"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:text="爱读书的好孩子"
        android:layout_toRightOf="@id/avatar" />
    <TextView
        android:textSize="13sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/tv_subname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:text="xx主席"
        android:layout_toRightOf="@id/tv_name" />

    <TextView
        android:textSize="@dimen/text_xsmall"
        android:textColor="@color/text_light_gray"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:text="5分钟前"
        android:layout_toRightOf="@id/avatar"
        android:layout_alignBottom="@id/avatar" />
    <ImageButton
        android:id="@+id/ib_add_subcomment"
        android:visibility="gone"
        android:background="@null"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comment"
        android:layout_alignTop="@id/avatar"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_below="@id/avatar">


        <RelativeLayout
            android:id="@+id/rl_say"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:layout_marginTop="8.0dip">

            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="标题111"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="4.0dip" />
        </RelativeLayout>

        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/text_gray"
            android:ellipsize="end"
            android:layout_below="@id/tv_title"
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈,我是评论哈哈哈哈.这是本好书,而且楼主的书保存的很好,给赞!!!"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="4.0dip" />

        <com.tino.views.NoScrollGridView
            android:id="@+id/photo_gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:numColumns="3" />

        <com.tino.views.NoScrollGridView
            android:id="@+id/avatar_gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:numColumns="7" />

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:layout_below="@id/rl_say">

            <TextView
                android:textSize="@dimen/text_xsmall"
                android:textColor="@color/text_light_gray"
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0评论"
                android:layout_centerVertical="true" />


        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="#ffececec"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_below="@id/ll_content" />
</RelativeLayout>